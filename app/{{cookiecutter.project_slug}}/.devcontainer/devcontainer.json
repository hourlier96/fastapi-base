{
  "name": "FastAPI Python 3.13",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/home/appuser/code",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.mouseWheelZoom": true,
        "editor.inlineSuggest.enabled": true,
        "explorer.confirmDelete": false,
        "git.autofetch": true,
        "git.autofetchPeriod": 120,
        "git.detectSubmodules": false,
        "git.path": "/usr/bin/git",
        "python.pythonPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "[python]": {
          "editor.formatOnType": true,
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "terminal.integrated.defaultProfile.linux": "sh",
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "charliermarsh.ruff",
        "ms-vsliveshare.vsliveshare",
        "ms-python.python",
        "mikestead.dotenv",
        "redhat.vscode-yaml",
        "davidanson.vscode-markdownlint",
        "naumovs.color-highlight",
        "usernamehw.errorlens",
        "sirtori.indenticator",
        "eamodio.gitlens",
        "github.copilot",
        "continue.continue",
        "tamasfe.even-better-toml",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-wsl"
      ]
    }
  },
  "remoteEnv": {
    "WATCHFILES_FORCE_POLLING": "1",
    "PYDEVD_DISABLE_FILE_VALIDATION": "1"
  },
  "portsAttributes": {
    "8000": {
      "label": "{{cookiecutter.project_name}}"
    },
    "5678": {
      "label": "Python Debugger"
    }
  },
  "postCreateCommand": "cp -n .env.example .env && echo 'Copied .env.example to .env' && if git rev-parse --is-inside-work-tree > /dev/null 2>&1; then pre-commit install; else echo 'Skipping pre-commit install: Not a git repository.'; fi"
}

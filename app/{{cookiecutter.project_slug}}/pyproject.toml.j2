[build-system]
requires = ["setuptools"]
build-backend = "setuptools.build_meta"

[project]
name = "fastapi-base"
version = "0.1.0"
requires-python = ">=3.12"

dependencies = [
    "fastapi",
    "pydantic-settings",
    {%- if cookiecutter.database == "postgresql (asyncpg)" %}
    "asyncpg",
    {%- elif cookiecutter.database == "sqlite (aiosqlite)" %}
    "aiosqlite",
    {%- elif cookiecutter.database == "mysql (aiomysql)" %}
    "aiomysql",
    {%- elif cookiecutter.database == "mongodb (motor)" %}
    "motor",
    {%- endif %}
]


[project.optional-dependencies]
dev = [
    "fastapi[standard]",
    "debugpy", 
    "ruff==0.11.7",
    "mypy==1.15.0",
    "pytest",
    "pytest-asyncio",
    {%- if cookiecutter.repository_name != '' %}
    "pre-commit",
    {%- endif %}
]

[tool.mypy]
python_version = "3.13"    
warn_return_any = true
warn_unused_configs = true
ignore_missing_imports = true

# https://github.com/pytest-dev/pytest-asyncio/issues/924
[tool.pytest.ini_options]
asyncio_default_fixture_loop_scope = "function"